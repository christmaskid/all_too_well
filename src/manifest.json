{
  "manifest_version": 3,
  "name": "RedCap問卷小幫手",
  "version": "1.0",
  "description": "幫你快速打勾課程回饋RedCap問卷中的選項(預設:非常滿意)",
  "permissions": ["activeTab", "scripting"],
  "action": {
    "default_popup": "popup.html"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"]

    }
  ],
  "host_permissions": [
    "https://redcap.mc.ntu.edu.tw/surveys/*"
  ]
}